<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="warningStyle">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="informStyle">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="strokeColor">@color/errorColor</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="strokeColor">@color/secondaryColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">265dp</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="strokeColor">@color/secondaryColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogNBtn</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogPBtn</item>

    </style>


    <style name="AlertDialogPBtn" parent="Theme.AppCompat">

        <item name="android:textColor">@color/errorColor</item>

    </style>

    <style name="AlertDialogNBtn" parent="Widget.MaterialComponents.Button.TextButton">


        <item name="backgroundTint">@color/primaryColor</item>
        <item name="rippleColor">@color/errorColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>


    </style>

    <style name="floatingBtnStyle">

        <item name="backgroundTint">@color/primaryColor</item>

    </style>

    <style name="submitButtons">

        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">#ffff</item>
        <item name="cornerRadius">70dp</item>

    </style>

    <style name="textStyle">

        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="forgotPassStyle">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:padding">20dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="toastSuccessStyle">

        <item name="android:colorBackground">@color/successColor</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="toastFailureStyle">

        <item name="android:colorBackground">@color/errorColor</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>